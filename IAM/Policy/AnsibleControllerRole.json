{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "sts:AssumeRole",
        "ec2:DescribeInstances",
        "ssm:SendCommand",
        "ssm:GetCommandInvocation",
        "ssm:DescribeInstanceInformation"
      ],
      "Resource": [
        "arn:aws:iam::<AccountID1>:role/AnsibleDiskMonitorRole",
        "arn:aws:iam::<AccountID2>:role/AnsibleDiskMonitorRole",
        "arn:aws:iam::<AccountID3>:role/AnsibleDiskMonitorRole"
      ]
    }
  ]
}